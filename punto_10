rango_notas     = df["Nota"].max() - df["Nota"].min()
varianza_notas  = df["Nota"].var(ddof=0)
desviacion_notas= df["Nota"].std(ddof=0)
print("Rango:", rango_notas)
print("Varianza:", varianza_notas)
print("Desviación estándar:", desviacion_notas)

plt.figure(figsize=(8,5))
plt.hist(df["Nota"], bins=5, color='orange', edgecolor='black', alpha=0.7)
plt.title("Histograma de Notas")
plt.xlabel("Nota")
plt.ylabel("Frecuencia")
plt.grid(axis='y', linestyle='--', alpha=0.5)
plt.show()
